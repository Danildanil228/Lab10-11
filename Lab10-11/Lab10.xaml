<Page x:Class="Lab10_11.Lab10"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab10_11"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lab10">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="1">
            <Button x:Name="buttonSave" Content="Создать файл" Margin="0 0 0 0" Click="buttonSave_Click"/>
            <Button x:Name="buttonOpen" Content="Открыть файл" Margin="20 0 0 0" Click="buttonOpen_Click"/>
            <Button x:Name="buttonGetLastComponent" Content="Найти последнюю компоненту файла" Margin="20 0 0 0" Click="buttonGetLastComponent_Click"/>
            <TextBlock x:Name="textBlock" Width="100" Height="20" Margin="20 0 0 0"/>
        </ToolBar>
        <TextBox Grid.Row="2" x:Name="textBox" Margin="10" FontSize="14"
                 TextWrapping="Wrap" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto"/>

    </Grid>
</Page>
